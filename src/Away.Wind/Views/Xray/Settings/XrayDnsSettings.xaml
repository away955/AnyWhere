<UserControl x:Class="Away.Wind.Views.XrayDnsSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" >
    <Grid>
        <StackPanel>
            <TextBox materialDesign:HintAssist.Hint="静态 IP 列表"
                     Text="{Binding XrayConfig.dns.host}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

            <TextBox materialDesign:HintAssist.Hint="DNS 服务器列表"
                     Text="{Binding XrayConfig.dns.servers}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            
        </StackPanel>
    </Grid>
</UserControl>
