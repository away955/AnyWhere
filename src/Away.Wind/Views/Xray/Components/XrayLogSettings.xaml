<UserControl x:Class="Away.Wind.Views.XrayLogSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:c="clr-namespace:Away.Wind.Components"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Grid>
        <StackPanel>
            <c:SwitchButton Text="DNS查询日志" IsChecked="{Binding XrayConfig.log.dnsLog}"/>
            <ComboBox materialDesign:HintAssist.Hint="日志的级别"
                      Text="{Binding XrayConfig.log.loglevel}"
                      Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                <ComboBoxItem Content="none" />
                <ComboBoxItem Content="error" />
                <ComboBoxItem Content="warning" />
                <ComboBoxItem Content="info" />
                <ComboBoxItem Content="debug" />
            </ComboBox>

            <TextBox VerticalAlignment="Center"
                     Text="{Binding XrayConfig.log.access}"
                     materialDesign:HintAssist.Hint="访问日志的文件地址"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>


            <TextBox VerticalAlignment="Center"
                     Text="{Binding XrayConfig.log.error}"
                     materialDesign:HintAssist.Hint="错误日志的文件地址"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
        </StackPanel>
    </Grid>
</UserControl>
