<UserControl x:Class="Away.Wind.Components.LeftMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" >

    <UserControl.Resources>        
        <ResourceDictionary Source="Styles.xaml"/>
    </UserControl.Resources>


    <Grid x:Name="MenuGrid" Width="60">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Border CornerRadius="10,0,0,0" Background="{StaticResource MaterialDesignToolBarBackground}"/>
            <Image x:Name="ImgLogo" Style="{StaticResource logo}" />
            <TextBlock Name="LogoTitleText" Style="{StaticResource logo.title}" />
        </Grid>

        <ListView x:Name="MenuListView" Grid.Row="1" 
                  SelectionChanged="MenuListView_SelectionChanged"
                  Style="{StaticResource menu.listView}" />

    </Grid>
</UserControl>
