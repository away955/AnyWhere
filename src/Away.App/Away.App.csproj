<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>
		<BuiltInComInteropSupport>true</BuiltInComInteropSupport>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
		<StartupObject>Away.App.Program</StartupObject>
		<ApplicationIcon>Assets\logo.ico</ApplicationIcon>
		<NoWarn>1701;1702;IDE1006;IDE0290;</NoWarn>
	</PropertyGroup>	

	<ItemGroup>
		<AvaloniaResource Include="Assets\**" />
		<Content Include="Assets\**" />
	</ItemGroup> 
	
	<ItemGroup>
		<PackageReference Include="Avalonia" Version="11.0.10" />
		<PackageReference Include="Avalonia.Controls.DataGrid" Version="11.0.10" />
		<PackageReference Include="Avalonia.Desktop" Version="11.0.10" />
		<PackageReference Include="Avalonia.Themes.Fluent" Version="11.0.10" />
		<PackageReference Include="Avalonia.Fonts.Inter" Version="11.0.10" />
		<!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
		<PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="11.0.10" />
		<PackageReference Include="Avalonia.ReactiveUI" Version="11.0.10" />
		<PackageReference Include="ReactiveUI.Fody" Version="19.5.41" />
		<PackageReference Include="Serilog.Extensions.Logging" Version="8.0.1-dev-10377" />
		<PackageReference Include="Serilog.Sinks.Console" Version="5.0.1" />
	</ItemGroup>


	<ItemGroup>
		<ProjectReference Include="..\Away.App.Domain\Away.App.Domain.csproj" />
	</ItemGroup>


	<ItemGroup>
		<Compile Update="Components\IconFont\IconFont.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>IconFont.resx</DependentUpon>
		</Compile>		
	</ItemGroup>


	<ItemGroup>
		<EmbeddedResource Update="Components\IconFont\IconFont.resx">
			<Generator>ResXFileCodeGenerator</Generator>
			<LastGenOutput>IconFont.Designer.cs</LastGenOutput>
		</EmbeddedResource>
	</ItemGroup>
</Project>
