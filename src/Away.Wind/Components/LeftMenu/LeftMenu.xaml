<UserControl x:Class="Away.Wind.Components.LeftMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Background="Transparent"
             mc:Ignorable="d" >

    <UserControl.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </UserControl.Resources>


    <Grid x:Name="MenuGrid" Width="65">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Border CornerRadius="10,0,0,0" Background="{StaticResource PrimaryHueDarkBrush}"/>
            <Image x:Name="ImgLogo" Style="{StaticResource logo}" />
            <TextBlock Name="LogoTitleText" Style="{StaticResource logo.title}" />
        </Grid>

        <ScrollViewer Name="MenuScroll" Loaded="MenuScroll_Loaded" Grid.Row="1">
            <ListView x:Name="MenuListView" Style="{StaticResource menu.listView}" SelectionChanged="MenuListView_SelectionChanged"/>
        </ScrollViewer>

    </Grid>
</UserControl>
